{
  "name": "transloadit-jquery-sdk",
  "version": "2.7.3",
  "scripts": {
    "build": "npm run clean && npm run css && npm run uglify && npm run gzip && npm run version:all",
    "clean": "rm -f build/*",
    "css": "cp css/transloadit2.css build/transloadit2-latest.css",
    "fix": "eslint . --fix",
    "gzip": "gzip --force --keep --best build/jquery.transloadit2-latest.js",
    "inject": "cp -v build/*.css ${WEBSITEDIR:-../content}/css/ && cp -v build/*{.js,js.gz} ${WEBSITEDIR:-../content}/js/",
    "link": "ln -nfs $(pwd) ${WEBSITEDIR:-../content}/jquery-sdk",
    "lint": "eslint .",
    "release:major": "env SEMANTIC=major npm run release",
    "release:minor": "env SEMANTIC=minor npm run release",
    "release:patch": "env SEMANTIC=patch npm run release",
    "release": "npm version ${SEMANTIC:-patch} -m \"Release %s\" && git push --tags && git push && npm publish",
    "start:test:server": "source env.sh && node tests/server.js",
    "test": "npm run lint && source env.sh && tests/run.sh",
    "uglify": "uglifyjs --comments --stats --output=build/jquery.transloadit2-latest.js --source-map=build/jquery.transloadit2-latest.js.map -- js/dep/*.js js/lib/*.js",
    "version:all": "npm run version:js && npm run version:jsmap && npm run version:css",
    "version:css": "cp -v build/transloadit2-latest.css build/transloadit2-v$(npm run --silent version:current).css",
    "version:current": "node -e 'console.log(require(\"./package.json\").version)'",
    "version:js": "cp -v build/jquery.transloadit2-latest.js build/jquery.transloadit2-v$(npm run --silent version:current).js",
    "version:jsmap": "cp -v build/jquery.transloadit2-latest.js.map build/jquery.transloadit2-v$(npm run --silent version:current).js.map"
  },
  "files": [
    "js",
    "css"
  ],
  "devDependencies": {
    "eslint": "2.7.0",
    "fakefile": "0.0.8",
    "debug": "2.2.0",
    "uglify-js": "2.6.2",
    "eslint-config-standard": "5.1.0",
    "eslint-plugin-promise": "1.1.0",
    "eslint-plugin-standard": "1.3.2"
  }
}
